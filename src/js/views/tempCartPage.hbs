{{! BLOCK CART PAGE }}

<section class="block-cart-page container-content-width">
    <div class="product-cards">
        
        {{#each this}}
        <div class="product-item">
            <div class="product-item__image-holder"><img src="images/imgHome/img.png" alt="img" class="product-item__image"></div>
            <div class="product-item__name"><a href="#">{{name}}</a></div>
            <div class="product-item__numb">
                    Quantity:
                    <input type ='number' name="number" id="zzz" value="{{currentValue}}" min="1" style="width: 35px">
            </div>
            <div class="product-item__price">
                <span>${{price}}</span>
                <a data-id="{{id}}" data-category="{{categoryId}}" class="product-item__button-remove">Remove</a>
            </div>
        </div>
        {{/each}}

        <div class="product-cards-price">Total: 348$</div>
        <div class="product-cards-buttons">
            <button class="product-cards-buttons--button button-item">Button</button>
            <button class="product-cards-buttons--button button-item">Button</button>
        </div>
    </div>

    <div class="basket-summary">
        <div class="basket-summary__all-prod">
            Basket Summary
        </div>
        <div class="basket-summary__num-items">(2 items)</div>
        <div class="basket-summary__lines"></div>  
        <div class="basket-summary__price">$768</div>
        <button class="basket-summary__button button-item">Button</button>
    </div>

</section>